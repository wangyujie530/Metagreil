{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "@assets/*": ["src/assets/*"],
        "@components/*": ["src/components/*"],
        "@utils/*": ["src/utils/*"]
      }
  },
  "exclude": [
      "node_modules"
  ]
}